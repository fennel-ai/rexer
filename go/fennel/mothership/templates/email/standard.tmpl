{{ define "email/standard.tmpl" }}
{{/* stardard email template, contains a title, description (optational) and CTA link button (optational) */}}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>{{.Subject}}</title>
    </head>
    <body style="background-color: #F8F6FB; padding-top: 60px; padding-bottom: 80px;">
        <div style="width: 560px; margin-left: auto; margin-right: auto;">
            <div style="width: 100%; padding: 49px 59px 65px 72px; background-color: white; border-radius: 8px;">
                <img src={{printf "%s/images/logo_name.svg" .MothershipEndpoint}} alt="Fennel AI" />
                <div style="width: 100%; font-size: 24px; margin-top: 54px;">
                    {{.Title}}
                </div>
                {{if .Desc}}
                    <div style="width: 100%; font-size: 14px; margin-top: 19px;">
                            {{.Desc}}
                    </div>
                {{end}}
                {{if .CTAText}}
                    <div style="display: table; margin-top: 24px; height: 50px; background-color: #A55EFF; width: 100%;">
                        <div style="display: table-cell; vertical-align: middle; text-align: center;">
                            <a href={{.CTALink}} target="_blank" style="color: white; text-decoration: none; font-size: 16px; font-weight: bold; display: inline-block; width: 100%">
                                {{.CTAText}}
                            </a>
                        </div>
                    </div>
                {{end}}
            </div>
            <div style="width: 100%; margin-top: 18px; font-size: 12px; font-weight: 500;">
                Â©{{.Year}}, All rights reserved, fennel.ai
            </div>
        </div>
    </body>
</html>

{{ end }}
